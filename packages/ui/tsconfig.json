{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist", // NOTE: 빌드 후 파일 경로
    "rootDir": "../../packages", // NOTE: rootDir을 packages로 설정하여 여러 패키지에서 참조 가능하도록 설정
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },

  "include": ["src/**/*", "../../packages/core/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
